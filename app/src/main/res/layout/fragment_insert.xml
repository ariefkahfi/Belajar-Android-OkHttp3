<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TableRow android:padding="8dp">
            <TextView android:text="Nama" android:layout_marginRight="30dp"/>
            <EditText
                android:id="@+id/editNama"
                android:layout_width="200dp"
                />
        </TableRow>
        <TableRow android:padding="8dp">
            <TextView android:text="Produk" android:layout_marginTop="10dp"/>
            <Spinner android:id="@+id/spinProduk" android:layout_height="40dp"></Spinner>
        </TableRow>
        <Button
            android:id="@+id/insertData"
            android:textAllCaps="false"
            android:text="Insert Data"
            />
    </TableLayout>

</LinearLayout>